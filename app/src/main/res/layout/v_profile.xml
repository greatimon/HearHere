<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/red_card_layout"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/red_card_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-5dp"
            android:scaleType="centerInside"
            android:src="@drawable/red_card"
            android:background="@drawable/red_card_tab"
            android:clickable="true"
            android:onClick="You_Get_Out"/>
        <!--<View-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="7dp"-->
            <!--android:background="@drawable/red_card_tab_below"/>-->
        <View
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:background="#f44336"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <!--프로필 사진 백그라운드-->
        <ImageView
            android:id="@+id/profile_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/test9"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--아이디-->
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:gravity="center|bottom|left"
                android:textColor="#FFF"
                android:textSize="15dp"
                tools:text="greatimon" />

            <!---->
            <LinearLayout
                android:layout_below="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center">

                <!--프로필 사진-->
                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:src="@drawable/test9"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center|start"
                    android:paddingLeft="13dp">

                    <!--닉네임-->
                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        tools:text="그레아티"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="bottom|start"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="my_Fans"
                            android:textSize="11dp"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:gravity="center|start"/>
                        <!--my_Fans-->
                        <TextView
                            android:id="@+id/my_Fans"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            tools:text="12"
                            android:textSize="15dp"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:gravity="center|start"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#FFF"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="my_BJ"
                            android:textSize="11dp"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:gravity="center|start"/>
                        <!--my_BJ-->
                        <TextView
                            android:id="@+id/my_BJ"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            tools:text="12"
                            android:textSize="15dp"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:gravity="center|start"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/fake_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <ImageView
            android:id="@+id/report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/siren"
            android:clickable="true"
            android:onClick="report_clicked"/>

        <!--<ImageView-->
            <!--android:id="@+id/red_card_img"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:padding="8dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/red_card"-->
            <!--android:clickable="true"-->
            <!--android:onClick="report_clicked"/>-->

        <Button
            android:visibility="visible"
            android:id="@+id/add_FAN"
            android:layout_below="@+id/fake_view"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="+ FAN"
            android:background="@drawable/plus_fan_rounded"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:onClick="add_FAN"/>

        <Button
            android:visibility="gone"
            android:id="@+id/subtract_FAN"
            android:layout_below="@+id/fake_view"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="MY"
            android:background="@drawable/subtracts_fan_rounded"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:onClick="subtract_FAN"/>

    </RelativeLayout>

</LinearLayout>