<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#dff1f1"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/profile_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:scaleType="centerCrop"
            tools:src="@drawable/test9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000000" />

        <ImageView
            android:id="@+id/user_profile_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:clickable="true"
            tools:src="@drawable/default_profile" />

        <TextView
            android:id="@+id/user_ID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/user_profile_img"
            android:background="@null"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#525859"
            android:textSize="18dp"
            tools:text="greatimon" />

    </RelativeLayout>

