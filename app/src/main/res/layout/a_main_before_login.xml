<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/background_img_parent"
    android:persistentDrawingCache="animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:persistentDrawingCache="animation"
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/main_img"
        android:scaleType="centerCrop"/>
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:alpha="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"/>

        <TextView
            android:persistentDrawingCache="animation"
            android:id="@+id/main_script"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="당신이 듣고 싶은 모든 이야기"
            android:textSize="15dp"
            android:textColor="#fbfbfb"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>


        <ImageView
            android:persistentDrawingCache="animation"
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/logo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>

        <LinearLayout
            android:id="@+id/facebook_login_layout"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/facebook_rounded"
            android:clickable="true"
            android:onClick="facebook_login_clicked">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/facebook"
                android:padding="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="페이스북으로 로그인"
                android:gravity="center"
                android:textColor="#fbfbfb"
                android:textSize="14dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>

        <LinearLayout
            android:id="@+id/kakao_login_layout"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/kakao_rounded"
            android:onClick="kakao_login_clicked">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/kakao"
                android:padding="9dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="카카오톡으로 로그인"
                android:gravity="center"
                android:textColor="#3f221d"
                android:textSize="14dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/email_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.01"
                android:text="이메일 로그인"
                android:gravity="center"
                android:textColor="#fbfbfb"
                android:textSize="15dp"
                android:clickable="true"
                android:onClick="email_login_clicked"/>
            <TextView
                android:id="@+id/join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="가입하기"
                android:gravity="center"
                android:textColor="#fbfbfb"
                android:textSize="15dp"
                android:clickable="true"
                android:onClick="join_clicked"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>
        
        
        
        
    </LinearLayout>



</RelativeLayout>