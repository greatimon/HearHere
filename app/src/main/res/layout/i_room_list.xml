<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/list_item_container">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/broadCast_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/test5" />

        <LinearLayout
            android:id="@+id/broadCast_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/cast_playtime_text_rounded"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="3dp"
                android:padding="1dp"
                android:scaleType="centerInside"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/broadCast_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00"
                android:textColor="#FFF"
                android:textSize="13dp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center|start"
            android:text="리방) 굿모닝 방송"
            android:singleLine="true"
            android:textColor="#262626"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BJ_nic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="그레아티"
            android:textColor="#a7a7a7"
            android:textSize="12dp"
            android:textStyle="bold" />
        <!--android:textColor="#8c8c8c"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/live_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/headset_room_list_this"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/cast_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/user_count_cast_list"
                android:visibility="gone" />

            <TextView
                android:id="@+id/guest_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center|start"
                android:text="56"
                android:textColor="#aeaeae"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:padding="4dp"
                android:src="@drawable/like_room_list_this" />

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center|start"
                android:text="452"
                android:textColor="#aeaeae"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

