<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/profile_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/test10"
            android:background="#FFF"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.5"/>

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/left_bracket"
                android:scaleType="centerInside"
                android:onClick="backClicked"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/modi_cancel"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/cancel"
                android:scaleType="centerInside"
                android:onClick="modi_cancel_clicked"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:gravity="start|bottom"
                        android:text="가입경로 - "
                        android:textColor="#fbfbfb"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/join_path"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start|bottom"
                        tools:text="이메일"
                        android:textColor="#fbfbfb"
                        android:textSize="13dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/email_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="15dp"
                    android:gravity="start|center"
                    tools:text="greatimon@naver.com"
                    android:textColor="#fbfbfb"
                    android:textSize="13dp"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                tools:visibility="gone"
                android:id="@+id/modify_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:gravity="center|end"
                android:text="수정하기"
                android:textColor="#fbfbfb"
                android:textSize="17dp"
                android:clickable="true"
                android:onClick="modi_clicked"/>
            <TextView
                tools:visibility="visible"
                android:id="@+id/modify_profile_complete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:gravity="center|end"
                android:text="수정완료"
                android:textStyle="bold"
                android:textColor="#fbfbfb"
                android:textSize="17dp"
                android:clickable="true"
                android:onClick="modi_complete_clicked"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center">

            <RelativeLayout
                tools:visibility="visible"
                android:id="@+id/modi_profile_img_layout"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    tools:visibility="visible"
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:src="@drawable/test10"
                    android:clickable="true"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/select_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/modi_photo3"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:onClick="select_img_clicked"/>
                <ImageView
                    android:id="@+id/delete_profile_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_profile_img"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:onClick="delete_profile_img_clicked"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center|start"
                android:paddingLeft="13dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        tools:visibility="gone"
                        android:id="@+id/nickName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="그레아티"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="bottom|start"/>
                    <EditText
                        android:id="@+id/modi_nickName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#99FFFFFF"
                        android:paddingLeft="5dp"
                        android:hint="닉네임, 2~15자리수"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="#212121"
                        android:textColorHint="#7e7e7e"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="my_Fans"
                        android:textSize="11dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center|start"/>
                    <TextView
                        android:id="@+id/my_Fans"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        tools:text="12"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center|start"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFF"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="my_BJ"
                        android:textSize="11dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center|start"/>
                    <TextView
                        android:id="@+id/my_BJ"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        tools:text="12"
                        android:textSize="15dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center|start"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="#ffc107"
            app:tabIndicatorHeight="2dp"
            app:tabTextColor="#c3c3c3"
            app:tabSelectedTextColor="#ffc107"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tab"
            android:background="@drawable/shadow_tablayout"
            android:id="@+id/view" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</LinearLayout>